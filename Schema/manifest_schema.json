{
    "description": "Schema for FreshAir Manifest Files",
    "definitions": {
        "condition": {
            "description": "A locally evaluated expression that is used to filter items.",
            "additionalProperties": false,
            "type": "object",
            "properties": {
                "key": {
                    "description": "The key to use to obtain the local value",
                    "type": "string"
                },
                "comparison": {
                    "description": "The comparison type to use",
                    "enum": [ "gt", "eq", "lt", "gte", "lte" ]
                },
                "value": {
                    "description": "The expected value",
                    "type": "string"
                }
            }
        },
        "file": {
            "description": "A file declaration",
            "additionalProperties": false,
            "type": "object",
            "properties": {
                "filename": {
                    "description": "A relative path to the file.",
                    "type": "string"
                },
                "SHA": {
                    "description": "The computed SHA1 of the file.",
                    "type": "string",
                    "minLength": 40,
                    "maxLength": 40
                },
                "conditions": {
                    "description": "A condition that must be true for the file to download",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/condition",
                        "required": ["key", "value"]
                    }
                }
            }
        }
    },
    "additionalProperties": false,
    "type": "array",
    "items": {
        "$ref": "#/definitions/file",
        "required": ["filename"]
    }
}
